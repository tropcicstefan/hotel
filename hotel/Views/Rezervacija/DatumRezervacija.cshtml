@model hotel.ViewModels.DatumiViewModel
@{
/**/

ViewBag.Title = "DatumRezervacija";
}



@using (Html.BeginForm("SpremanjeDatuma", "Rezervacija"))
{
    @Html.ValidationSummary(true, "Please fix the following errors")

<div class="form-horizontal">
    <div class="form-group">
        <h2>Datum boravka</h2>
    
        @Html.LabelFor(m => m.DatumOd)
        @Html.EditorFor(m => m.DatumOd, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.DatumOd)

    
        @Html.LabelFor(m => m.DatumDo)
        @Html.EditorFor(m => m.DatumDo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.DatumDo)
    

        @Html.HiddenFor(m => m.GostID)
        @Html.AntiForgeryToken()
    
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>


 }

