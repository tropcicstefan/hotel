<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dodaj <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">@Html.ActionLink("Dodaj hotel", "Create", "Hotel")</a></li>
                            <li><a href="#">@Html.ActionLink("Dodaj tip sobe", "Create", "SobaTip")</a></li>
                            <li><a href="#">@Html.ActionLink("Dodaj sobu", "Create", "Soba")</a></li>
                            <li><a href="#">@Html.ActionLink("Dodaj gosta", "Create", "Gost")</a></li>
                            <li><a href="#">@Html.ActionLink("Dodaj u ponudu", "Create", "ElementPonude")</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Pregledaj <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">@Html.ActionLink("Pregledaj hotele", "Index", "Hotel")</a></li>
                            <li><a href="#">@Html.ActionLink("Pregledaj tipove sobe", "Index", "SobaTip")</a></li>
                            <li><a href="#">@Html.ActionLink("Pregledaj sobe", "Index", "Soba")</a></li>
                            <li><a href="#">@Html.ActionLink("Pregledaj sve goste", "Index", "Gost")</a></li>
                            <li><a href="#">@Html.ActionLink("Pregledaj ponudu", "Index", "ElementPonude")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hotel Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
